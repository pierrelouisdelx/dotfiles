[module/sep]
type = custom/text

content-background = ${colors.background-alt}
content-foreground = ${colors.foreground}
content-overline = ${colors.line}
content = " | "

[module/decor-glyph]
type = custom/text
content-background = ${colors.transparent}
content-foreground = ${colors.background-alt}
content-overline = ${colors.line}

[module/left-end-top]
inherit = module/decor-glyph
content = "%{T3} %{T-}"

[module/right-end-top]
inherit = module/decor-glyph
content = "%{T3}   %{T-}"

[module/left-end-bottom]
inherit = module/decor-glyph
content = "%{T3} %{T-}"

[module/right-end-bottom]
inherit = module/decor-glyph
content = "%{T3} %{T-}"

[module/updates]
type = custom/script
exec = checkupdates | wc -l
interval = 3600

format = <label>
format-background = ${colors.background-alt}
format-foreground = ${colors.foreground}
format-overline = ${colors.line}
click-left = urxvt -e sudo pacman -Syu

[module/vpn-openvpn-status]
type = custom/script
exec = ~/.config/polybar/vpn-openvpn-status.sh
interval = 5
